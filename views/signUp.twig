{% extends 'base.twig' %}

{% block body %}
<div class="container">
      <h5 class="titre">{{message}}</h5>
<form action="/signup" method="POST">
  <div class="field">
    <p class="control has-icons-left">
      <input  class="input" type="text"  id="Nom" name="Nom" Placeholder="Nom...">
        <span class="icon is-small is-left">
          <i class="material-icons-round">face</i>
        </span>
    </p>
  </div>
  <div class="field">
    <p class="control has-icons-left">
      <input class="input" type="text"  id="Prénom" name="Prénom" Placeholder="Prénom...">
        <span class="icon is-small is-left">
          <i class="material-icons-round">face</i>
        </span>
    </p>
  </div>
  <div class="field">
    <p class="control has-icons-left">
      <input class="input" type="tel"  id="Téléphone" name="Téléphone" Placeholder="Téléphone...">
        <span class="icon is-small is-left">
          <i class="material-icons-round">phone</i>
        </span>
    </p>
  </div>
  <div class="field">
    <p class="control has-icons-left has-icons-right">
      <input class="input" type="email"  id="Email" name="Email" Placeholder="Email...">       
          <i class="fas fa-envelope"></i>
        <span class="icon is-small is-left">
          <span class="material-icons-round">mail</span>
        </span>
      </p>
  </div>
  <div class="field">
    <p class="control has-icons-left">
      <input class="input" type="password"  id="Password" name="Password" Placeholder="Mot de passe...">
        <span class="icon is-small is-left">
          <i class="material-icons-round">lock</i>
        </span>
    </p>
  </div>
  <div class="field">
    <p class="control">
      <button type="submit" id="Creation" class="button is-success" name="button" value="Creation">
        Se connecter
      </button>
    </p>
    </div>
  </form>
</div>
{% endblock %}
